<% if notice.present? %>
<p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>
<h3>Admin</h3>
<%= link_to "Add New Property", new_property_path %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'pull-right' %>
<hr>
<h3>Sales: <%= @sales.count %></h3>
<% @sales.each do |property| %>
<div><%= link_to "Update", edit_property_path(property.id) %> - <b>Active:</b> <%= property.active %> - <%= property.status %> - <%= property.neighborhood %> - $<%= number_with_delimiter(property.price, :delimiter => ',') %> - <%= property.address.split(',').first %></div>
<% end %>
